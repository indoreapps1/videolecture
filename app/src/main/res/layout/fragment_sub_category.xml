<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.SubCategoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dim_value_5">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="@dimen/dim_value_100"
            android:layout_height="@dimen/dim_value_60"
            android:layout_marginLeft="@dimen/dim_value_10"
            android:layout_marginTop="@dimen/dim_value_10"
            android:layout_marginRight="@dimen/dim_value_10"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_value_10"
            android:layout_marginRight="@dimen/dim_value_10"
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_sub_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_value_5">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>