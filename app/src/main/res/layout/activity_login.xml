<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/dim_value_200"
        android:layout_height="@dimen/dim_value_150"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:src="@drawable/demo_logo"/>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/dim_value_20"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your mobile number"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:gravity="center"/>

    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_value_50"
        android:background="@drawable/login_editext_drawable"
        android:layout_marginTop="@dimen/dim_value_30"
        android:layout_marginLeft="@dimen/dim_value_20"
        android:layout_marginRight="@dimen/dim_value_20"
        android:paddingLeft="@dimen/dim_value_10"
        android:paddingRight="@dimen/dim_value_10"
        android:inputType="number"
        android:singleLine="true"
        android:maxLength="10"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/dim_value_20"/>

    <Button
        android:id="@+id/btn_login_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_value_50"
        android:background="@drawable/login_btn_drawable"
        android:layout_margin="@dimen/dim_value_20"
        android:text="Next"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>