<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/item_category_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:elevation="@dimen/dim_value_3"
        android:layout_marginLeft="@dimen/dim_value_5"
        android:layout_marginRight="@dimen/dim_value_5"
        android:layout_marginTop="@dimen/dim_value_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/item_category_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_value_150"
            android:layout_marginLeft="@dimen/dim_value_10"
            android:layout_marginRight="@dimen/dim_value_10"
            android:layout_marginTop="@dimen/dim_value_10"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_value_40"
            android:background="@color/colorPrimaryDark"
            android:layout_marginLeft="@dimen/dim_value_10"
            android:layout_marginRight="@dimen/dim_value_10"
            android:layout_marginBottom="@dimen/dim_value_10">

            <TextView
                android:id="@+id/item_category_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:gravity="start"
                android:layout_marginLeft="@dimen/dim_value_5"
                android:paddingLeft="@dimen/dim_value_10"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>